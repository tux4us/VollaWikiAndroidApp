                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="Dansk"
                            android:textSize="10sp"
                            android:backgroundTint="#730D0D" />

                        <Button
                            android:id="@+id/btnWikiNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="4dp"
                            android:text="Norsk"
                            android:textSize="10sp"
